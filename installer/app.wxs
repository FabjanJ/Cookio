<?xml version='1.0' encoding='UTF-8'?>
<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
  <Product Id='*' Name='$appName' Language='1033' Version='1.0.0.0' Manufacturer='YourCompany' UpgradeCode='12345678-1234-1234-1234-123456789ABC'>
    <Package InstallerVersion='200' Compressed='yes' InstallScope='perMachine' />
    <MajorUpgrade DowngradeErrorMessage='A newer version is already installed.' />
    <MediaTemplate EmbedCab='yes' />
    <Feature Id='ProductFeature' Title='Main Feature' Level='1'>
      <ComponentGroupRef Id='ProductComponents' />
    </Feature>
  </Product>
  <Fragment>
    <Directory Id='TARGETDIR' Name='SourceDir'>
      <Directory Id='ProgramFilesFolder'>
        <Directory Id='INSTALLFOLDER' Name='$appName' />
      </Directory>
    </Directory>
  </Fragment>
  <Fragment>
    <ComponentGroup Id='ProductComponents' Directory='INSTALLFOLDER'>
      <Component Id='ApplicationFiles'>
        <File Source='$exePath' />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
